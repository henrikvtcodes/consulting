{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~utils/*": ["./utils/*"],
      "~components/*": ["./components/*"],
      "~pub/*": ["./public/*"],
      "~layout/*": ["./layout/*"],
      "~config": ["./config"],
      "~styles/*": ["./styles/*"]
    }
  },
  "include": ["next-env.d.ts", "global.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
